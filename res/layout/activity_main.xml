<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="30dp"
    tools:context="pl.edu.agh.inz.reactive.MainActivity">

   <LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_gravity="center" >
		
		
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			
			<TextView
				android:id="@+id/tvLabelUser"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20dp"        
				android:text="Zalogowano jako:" />
			
			<TextView
				android:id="@+id/tvLoginUser"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20dp"       
				android:textStyle="bold" 
				android:text="" />
		</LinearLayout>	 
              
       	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_marginTop="24dp"
			android:layout_height="300dp" >
           
			<ImageView
			    android:id="@+id/imgvGra1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:src="@drawable/gra1"
			    android:clickable="true"/>
			
			<ImageView
			    android:id="@+id/imgvGra2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:src="@drawable/gra1"
			    android:clickable="true"/>           
       </LinearLayout>
	   
	
	    <Button
	        android:id="@+id/button3"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_below="@+id/button2"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="24dp"
	        android:textSize="30dp"
	        android:background="@color/buttonColor1"
	        android:text="Zobacz postÄ™py" />	    
	    
	    <Button
	        android:id="@+id/button5"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_below="@+id/button3"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="24dp"
	        android:textSize="30dp"
	        android:background="@color/buttonColor2"
	        android:text="Panel administracyjny" />
	    
	</LinearLayout>   

</FrameLayout>
